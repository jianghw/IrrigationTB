<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_btn_osiEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_osiEdit_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/activity_textColor"
            android:textSize="?attr/fontSize_2"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/edtTxt_btn_osiEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/activity_textColor"
            android:textColorHint="@color/activity_hint_textColor"
            android:textSize="?attr/fontSize_2"/>

        <Button
            android:id="@+id/btn_osiEdit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginRight="@dimen/divider_line_marginLeft"
            android:background="@drawable/bg_vercode_btn"
            android:text="@string/aty_verCode_getCode"
            android:textColor="@color/activity_textColor_white"
            android:textSize="?attr/fontSize_1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_btn_osiEdit_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_btn_osiEdit"
        android:layout_centerHorizontal="true"
        android:background="@color/activity_editText_line"/>
</RelativeLayout>
