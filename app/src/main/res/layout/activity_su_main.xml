<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
        android:id="@+id/include_actionBar"
        layout="@layout/include_actionbar" />

    <FrameLayout
        android:id="@+id/fl_ptMain_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/tabBottom_ptMain"
        android:layout_below="@+id/include_actionBar"
        android:layout_weight="1" />

    <com.cjyun.tb.supervisor.custom.UITableBottom
        android:id="@+id/tabBottom_ptMain"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>