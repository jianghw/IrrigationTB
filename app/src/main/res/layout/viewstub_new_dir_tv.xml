<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="@dimen/aty_newDir_marginLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aty_newDir_search"
        android:textColor="@color/activity_textColor"
        android:textSize="?attr/fontSize_3"/>

    <TextView
        android:layout_marginLeft="@dimen/aty_newDir_marginLeft"
        android:id="@+id/tv_search_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/activity_textColor"
        android:textSize="?attr/fontSize_2"/>
</LinearLayout>