<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_height">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/right_beacon_marginRight"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_user_info_head"/>

        <TextView
            android:id="@+id/tv_directorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/divider_line_marginLeft"
            android:layout_toRightOf="@+id/iv_head"
            android:textColor="@color/activity_textColor"
            android:textSize="@dimen/activity_textSize_normal"
            tools:text="小小的我"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/right_beacon_marginRight"
            android:src="@drawable/ic_instructions_right"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_line_height"
        android:layout_marginLeft="@dimen/divider_line_marginLeft"
        android:layout_marginRight="@dimen/divider_line_marginLeft"
        android:background="@color/module_segment_line_gray"/>
</LinearLayout>